{% set uniqid = uniqid ?? uniqid('proxy_') %}

<div id="nginx-proxies-{{ uniqid }}" data-uniqid="{{ uniqid }}"
     class="tab-pane {{ active is defined and active ? 'active' }}">
    <div class="form-group col-xs-12 col-sm-6">
        <label for="nginx-proxies-{{ uniqid }}-proxy">
            Proxy URL
        </label>
        <input type="text" id="nginx-proxies-{{ uniqid }}-proxy"
               name="nginx[proxies][{{ uniqid }}][proxy]"
               placeholder="http://backend" class="form-control"
               value="{{ proxy.proxy }}" />
        <div class="help-block">
            This should match an upstream name configured above. e.g.
            <code>http://backend</code>
        </div>
    </div>

    <div class="clearfix"></div>
</div>
